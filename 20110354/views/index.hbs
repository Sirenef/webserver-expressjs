<style>
body {
    font-family: Arial, sans-serif;
    background-color: #f0f0f0;
    margin: 0;
    padding: 0;
}

.container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #fff;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.header {
    text-align: center;
    margin-bottom: 20px;
    color: red;
}

.title {
    font-size: 36px;
    color: #333;
    text-decoration: none;
    display: block; 
    text-align: center; 
}

.content {
    flex-direction: column;
    align-items: center; 
}

.section {
    flex: 1;
    padding: 20px;
    background-color: #fff;
}

.section-title {
    font-size: 24px;
    margin-bottom: 10px;
    color: #333;
    text-align: center;
}

.btn {
    padding: 5px 20px; 
    border: none;
    cursor: pointer;
}

.btn-primary {
    background-color: #007bff;
    color: #fff;
}

.btn-secondary {
    background-color: #ccc;
    color: #333;
}

ul {
    list-style: none;
    padding: 0;
    margin-top: 20px; 
}

li {
    margin-bottom: 10px;
}

.post-link {
    text-decoration: none;
    color: #007bff;
    display: block; 
    margin-bottom: 5px; 
}

.edit-link,
.delete-link {
    text-decoration: none;
    color: #333;
    margin-left: 10px;
}
form {
    text-align: center; 
    width: 65%;
}
form div {
    text-align: right;
}
.post-form label {
    margin-bottom: 5px; 
    text-align: right;
}
.input {
    padding-bottom: 5px;
}
</style>
<body>
  <div class="container">
    <header>
      <h1 class="title"><a href="/">Simple Blog</a></h1>
    </header>
    <div class="content">
      <div class="post-form">
        <h2 class="section-title">Add new post</h2>
        <form action="/create" method="post">
          <div class="input">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" required />
          </div>
          <div class="input">
            <label for="content">Content:</label>
            <textarea id="content" name="content" required></textarea>
          </div>
          <div class="buttons">
            <button type="submit" class="btn btn-primary">Upload</button>
            <button type="reset" class="btn btn-secondary">Reset</button>
          </div>
        </form>
      </div>
      <div class="post-list">
        <h2 class="section-title">List of posts</h2>
        <ul>
          {{#each posts}}
            <li>
              <a href="/post/{{id}}" class="post-link">{{title}}</a>
              <a href="/edit/{{id}}" class="edit-link">Edit</a>
              <a href="/delete/{{id}}" class="delete-link">Delete</a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
    <footer>
      <p>&copy; 2023 Simple Blog</p>
    </footer>
  </div>
</body>